cabal-version: 3.0
name:          armadillo-cli
version:       0.1.0.0
synopsis:      CLI
license-file:  LICENSE
license:       Apache-2.0
author:        Jann Müller <j-mueller@users.noreply.github.com>
maintainer:    Jann Müller <j-mueller@users.noreply.github.com>
copyright:     (c) 2023 Jann Müller
build-type:    Simple

common lang
  default-language:   Haskell2010
  default-extensions:
    DeriveFoldable
    DeriveFunctor
    DeriveGeneric
    DeriveLift
    DeriveTraversable
    DerivingStrategies
    ExplicitForAll
    FlexibleContexts
    GeneralizedNewtypeDeriving
    ImportQualifiedPost
    LambdaCase
    MultiParamTypeClasses
    NamedFieldPuns
    ScopedTypeVariables
    StandaloneDeriving

  other-extensions:
    ConstrainedClassMethods
    DeriveAnyClass
    ExistentialQuantification
    FlexibleInstances
    GADTs
    MonadComprehensions
    MultiParamTypeClasses
    OverloadedStrings
    QuasiQuotes
    RankNTypes
    TemplateHaskell
    TupleSections
    TypeApplications
    TypeFamilies

  ghc-options:
    -Wall -Wnoncanonical-monad-instances -Wincomplete-uni-patterns
    -Wincomplete-record-updates -Wredundant-constraints -Widentities
    -Wunused-packages

library
  import:          lang
  hs-source-dirs:  lib
  ghc-options:
    -fobject-code -fno-ignore-interface-pragmas
    -fno-omit-interface-pragmas -fno-specialise

  exposed-modules:
    Armadillo.Api
    Armadillo.BuildTx
    Armadillo.Cli
    Armadillo.Cli.Command
    Armadillo.Command
    Armadillo.Orphans
    Armadillo.Scripts
    Armadillo.Server
    Armadillo.Server.Mock

  build-depends:
    , aeson
    , aeson-pretty
    , base                                                              >=4.16
    , base64-bytestring-type
    , bytestring
    , cardano-api
    , cardano-dex-contracts-offchain
    , containers
    , convex-base
    , convex-coin-selection
    , convex-mockchain
    , convex-node-client
    , convex-wallet
    , either-result
    , http-client
    , katip
    , lens
    , mtl
    , openapi3
    , optparse-applicative
    , plutus-ledger-api:{plutus-ledger-api, plutus-ledger-api-testlib}
    , plutus-tx
    , servant
    , servant-client
    , servant-client-core
    , servant-openapi3
    , servant-server
    , text
    , transformers
    , warp

executable armadillo-cli
  import:           lang
  main-is:          Main.hs
  build-depends:
    , armadillo-cli
    , base           >=4.14.3.0

  hs-source-dirs:   app
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -O2

test-suite armadillo-cli-test
  import:           lang
  type:             exitcode-stdio-1.0
  main-is:          Spec.hs
  other-modules:
    Armadillo.Test.CliCommand
    Armadillo.Test.DevEnv
    Armadillo.Test.Integration
    Armadillo.Test.Utils

  build-depends:
    , aeson
    , armadillo-cli
    , base                 >=4.14.3.0
    , bytestring
    , cardano-api
    , containers
    , contra-tracer
    , convex-base
    , convex-devnet
    , convex-wallet
    , filepath
    , http-client
    , lens
    , process
    , servant-client
    , servant-client-core
    , tasty
    , tasty-hunit
    , temporary
    , text

  hs-source-dirs:   test
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -O2

executable armadillo-cli-dev
  import:           lang
  main-is:          Devnet.hs
  other-modules:
    Armadillo.Test.CliCommand
    Armadillo.Test.Integration
    Armadillo.Test.Utils

  build-depends:
    , aeson
    , armadillo-cli
    , base                 >=4.14.3.0
    , bytestring
    , cardano-api
    , containers
    , contra-tracer
    , convex-base
    , convex-devnet
    , convex-wallet
    , filepath
    , http-client
    , lens
    , process
    , servant-client
    , servant-client-core
    , tasty
    , tasty-hunit
    , temporary
    , text

  hs-source-dirs:   test app
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -O2
